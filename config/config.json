{
  "output_dir": "./output",
  "model": "medium",
  "language": "auto",
  "task": "transcribe",
  "output_format": "txt",
  "batch": false,
  "live_capture": {
    "enabled": true,
    "raw_transcript_filename": "live_raw.txt",
    "final_transcript_filename": "transcript.txt",
    "audio": {
      "device": "default",
      "sample_rate": 16000,
      "channels": 1,
      "chunk_ms": 250,
      "include_output": false
    },
    "output_raw_transcript_filename": "live_output_raw.txt",
    "output_final_transcript_filename": "transcript_output.txt",
    "vad": {
      "enabled": true,
      "silence_ms": 350,
      "min_speech_ms": 200,
      "energy_threshold": 0.01,
      "max_buffer_ms": 3000
    },
    "output_vad": {
      "enabled": true,
      "silence_ms": 350,
      "min_speech_ms": 200,
      "energy_threshold": 0.005,
      "max_buffer_ms": 3000
    }
  },
  "postprocess": {
    "enabled": false,
    "provider": "llm",
    "profile": "default"
  },
  "mixing": {
    "enabled": true,
    "ollama_model": "glm-4.7-flash:latest",
    "unload_on_start": true
  },
  "clipboard": {
    "enabled": true,
    "tool": "auto"
  },
  "web": {
    "enabled": true,
    "host": "127.0.0.1",
    "port": 8787
  },
  "tray": {
    "enabled": true,
    "icon": "custom",
    "tooltip": "Whisperflow: Recording"
  },
  "archive": {
    "enabled": true,
    "dir_name": "archives",
    "web": {
      "enabled": true,
      "host": "127.0.0.1",
      "port": 8788
    }
  },
  "logging": {
    "level": "INFO",
    "console": true,
    "file": "./logs/whisperflow.log"
  }
}
